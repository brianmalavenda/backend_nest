generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String
  diario DiarioLeido[]
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt
}

model Diario {
  id        String   @id @default(uuid())
  name      String?
  sigla     String   @unique
  diarioLeido DiarioLeido[]
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt
}

model DiarioLeido {
  id        String   @id @default(uuid())
  userId    String
  diarioId  String
  user      User     @relation(fields: [userId], references: [id])
  diario    Diario   @relation(fields: [diarioId], references: [id])
  fecha     DateTime
  createdAt DateTime @default(now())  
  updatedAt DateTime @updatedAt
}

